<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
      <div class="row">
        <div class="col">
          <label for="inputEmail" class="sr-only">Email address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", autofocus: true, class: "form-control", placeholder: "Email Address", required: true %>
          <label for="inputPassword" class="sr-only">Password</label>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
      <% end %>

      <button id="user_login" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <% end %>
</div>
